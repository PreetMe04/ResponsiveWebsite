        header 
            h1(class="heading") Edu Learning Form
        //- <!-- NAVIGATION BAR CODE STARTS------------------------------------------------------- -->
        nav(class="navbar navbar-expand-lg navbar-dark bg-light" id="myTopnav")
            a(class="navbar-brand active mypadding" style="margin-left: 3px; font-weight: bolder;" href="/edu_form") Edu-forms
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")

            div(class="collapse navbar-collapse" id="navbarSupportedContent")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item ")
                        a(class="nav-link mymargin" href="/") Home 
                        
                    li(class="nav-item")
                        a(class="nav-link mymargin" href="/edu_videos") Edu-Vidoes
                
                    li(class="nav-item")
                        a(class="nav-link mymargin" href="/edu_notes") Edu-Notes
        
                    li(class="nav-item dropdown")
                        a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false") Contact

                        div(class="dropdown-menu" aria-labelledby="navbarDropdown" style="border-radius: 5px; border: 4px solid #222831;")
                            a(class="dropdown-item" href="#") Instagram
                                hr
                            
                            a(class="dropdown-item" href="#") Facebook
                                hr(style="list-style: circle;")
                
                            a(class="dropdown-item" href="#") Linked In
                                hr
        div(class="content")   
            form(action="/edu_form" method="post")
                h1(class="form-heading") Edu-Contact Form
                div(class="form-row")
                    div(class="col-md-6 mb-3")
                        label(for="validationCustom01") First name*
                        input(type="text" class="form-control" id="validationCustom01" value="Mark" required name="FirstName")
                        div(class="valid-feedback") Looks good!
                    
                    div(class="col-md-6 mb-3")
                        label(for="validationCustom02") Last name*
                        input(type="text" class="form-control" id="validationCustom02" value="Otto" required name="LastName")
                        div(class="valid-feedback") Looks good!
                    
                div(class="form-row")
                    div(class="form-group col-md-6")
                        label(for="inputEmail4") Email*
                        input(type="email" class="form-control" id="inputEmail4" placeholder="Enter valid email id" required name="Email")
                    
                div(class="form-group")
                    label(for="inputAddress") Address 1*
                    input(type="text" class="form-control" id="inputAddress" placeholder="Permanent address" required name="Address1")
                
                div(class="form-group")
                    label(for="inputAddress2") Address 2
                    input(type="text" class="form-control" id="inputAddress2" placeholder="Optinal Address if any" name="Address2")
                
                div(class="form-row")
                    div(class="form-group col-md-6")
                        label(for="inputCity") Phone Number*
                        input(type="text" class="form-control" id="inputCity" required name="PhoneNumber" placeholder="+xx xxxxxxxxxx")
                    
                    div(class="form-group col-md-4")
                        label(for="inputState") State*
                        select(id="inputState" class="form-control" required name="State")
                            option(selected disabled) Choose...
                            option(value="Gujarat") Gujarat 
                            option(value="maharastra") Maharastra 
                            option(value="Rajasthan") Rajasthan 
                            option(value="Madhypradesh") Madhypradesh 
                       
                    div(class="form-group col-md-2")
                        label(for="inputZip") Zip
                        input(type="text" class="form-control" id="inputZip" placeholder="xxxxxx" required name="Zip")
                 
                div(class="form-group")
                    div(class="form-check")
                        input(class="form-check-input" type="checkbox" id="gridCheck" name="Checked" value="Yes it is checked!")
                        label(class="form-check-label" for="gridCheck")
                        |    Tick this box before submitting this form !
                    
                hr 

                div(class="button")
                    button(type="reset" class="btn myreset-button") Clear
                    button(type="submit" class="btn mysubmit-button") Submit
                

        footer
            div(class="myfooter")
                p Please have patience, we will contact with you as soon ass possible.
        
        script. 
            window.onscroll = function () {
            myFunction1();
            };

            var navbar = document.getElementById("myTopnav");
            var sticky = navbar.offsetTop;

            function myFunction1() {
                if (window.pageYOffset >= sticky) {
                    if (screen.width > 600) {
                        navbar.classList.add("sticky");
                    } else {
                        navbar.classList.remove("sticky");
                    }
                } else {
                    navbar.classList.remove("sticky");
                }
            }

